<Window x:Class="BleGolfSensorViewer.Presentation.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BLE Golf Sensor Viewer" Height="600" Width="960">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 12" VerticalAlignment="Center" Spacing="8">
            <Button Content="Scan" Command="{Binding ScanCommand}" Width="100" />
            <ComboBox Width="250"
                      ItemsSource="{Binding Devices}"
                      SelectedItem="{Binding SelectedDevice, Mode=TwoWay}"
                      DisplayMemberPath="Name" />
            <Button Content="Connect" Command="{Binding ConnectCommand}" Width="100" Margin="8 0 0 0" />
            <Button Content="Disconnect" Command="{Binding DisconnectCommand}" Width="100" Margin="8 0 0 0" />
            <TextBlock Text="{Binding Status}" Margin="16 0 0 0" VerticalAlignment="Center" FontWeight="Bold" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Measurements}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  Name="MeasurementsGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="*" />
                <DataGridTextColumn Header="Service" Binding="{Binding ServiceId}" Width="2*" />
                <DataGridTextColumn Header="Characteristic" Binding="{Binding CharacteristicId}" Width="2*" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Parsed" Binding="{Binding ParsedSummary}" Width="2*" />
                <DataGridTextColumn Header="Hex" Binding="{Binding Hex}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBox Grid.Row="2"
                 Text="{Binding LogText}"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 FontFamily="Consolas" />
    </Grid>
</Window>
